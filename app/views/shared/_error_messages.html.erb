 
<% if f.errors.any? %>
  <div id="error_explanation"> 
    <div class="alert alert-danger">
      The form contains <%= pluralize(f.errors.count, "error") %>.
    </div>
     <ul class="list-unstyled">
      <% f.errors.full_messages.each do |msg| %>
      <li><p class="text-danger"><%= msg %></p></li>
      <% end %>
    </ul>
    </ul>
  </div>
<% end %>